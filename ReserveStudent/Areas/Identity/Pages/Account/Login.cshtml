@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row d-flex justify-content-center">
    <div>
        <section>
            <form id="account" method="post">
                <h4 class="text-center">Use a local account to login.</h4>
                <hr />

                <div class="container-fluid px-1 px-md-5 px-lg-1 px-xl-5 py-5 mx-auto">
                    <div class="card card0 border-0">
                        <div class="row d-flex">
                            <div class="col-lg-6">
                                <div class="card1 pb-5">
                                    <div class="row"> <img src="~/img/Youcode.png" class="logo"> </div>
                                    <div class="row px-3 justify-content-center mt-4 mb-5 border-line"> <img src="https://i.imgur.com/uNGdWHi.png" class="image"> </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="card2 card border-0 px-4 py-5">

                                    <div class="row px-3 mb-4">
                                        
                                    </div>
                                    <div class="form-group row px-3">
                                        <label class="mb-1">
                                            <h6 class="mb-0 text-sm">Email Address</h6>
                                        </label>
                                        <input asp-for="Input.Email" class="mb-4" type="text"  placeholder="Enter a valid email address"/>
                                    </div>
                                    <div class="form-group row px-3">
                                        <label class="mb-1">
                                            <h6 class="mb-0 text-sm">Password</h6>
                                        </label>
                                        <input asp-for="Input.Password" type="password"  placeholder="Enter password"/>
                                    </div>
@*                                <div class="form-group">
                                    <div class="checkbox">
                                        <label asp-for="Input.RememberMe">
                                            <input asp-for="Input.RememberMe" />
                                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                                        </label>
                                    </div>
                                </div>*@
                                        
                                   

                                    <div class="form-group row mb-3 px-3">
                                        <button type="submit" class="btn btn-blue text-center">Login</button>
                                    </div>
                                    <div class="form-group">
                                        <p>
                                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                        </p>
                                        <p>
                                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                                        </p>
                                        <p>
                                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



